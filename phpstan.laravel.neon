includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    level: 8
    paths:
        - app
        - config
        - database
        - routes
        - tests
    excludePaths:
        - vendor
        - storage
        - bootstrap/cache
    ignoreErrors:
        # Laravel Eloquent method calls (dynamic methods)
        - '#Call to an undefined method Illuminate\\Database\\Eloquent\\Builder::#'
        - '#Call to an undefined method Illuminate\\Database\\Eloquent\\Model::#'
        - '#Call to an undefined method Illuminate\\Database\\Eloquent\\Collection::#'
        - '#Call to an undefined method Illuminate\\Support\\Collection::#'
        - '#Call to an undefined method Illuminate\\Http\\Request::#'
        - '#Call to an undefined method Illuminate\\Http\\Response::#'

        # Laravel config issues
        - '#Parameter.*\$title.*Str::slug.*expects string, bool\|string given#'

        # Common Laravel testing issues
        - '#Call to method PHPUnit\\Framework\\Assert::assertTrue\(\) with true will always evaluate to true#'
        - '#Call to method PHPUnit\\Framework\\Assert::assertFalse\(\) with false will always evaluate to false#'

        # Array type issues in tests
        - '#Method .*::.*\(\) return type has no value type specified in iterable type#'

        # Laravel specific patterns
        - '#Access to an undefined property Illuminate\\Database\\Eloquent\\Model::\$#'
        - '#Call to an undefined method Illuminate\\Database\\Eloquent\\Model::#'

    reportUnmatchedIgnoredErrors: false
