{
    "name": "laravel/template",
    "description": "Template Laravel 12 com ferramentas de qualidade e boas pr√°ticas",
    "type": "project",
    "keywords": ["laravel", "template", "phpstan", "psalm", "quality", "best-practices"],
    "license": "MIT",
    "authors": [
        {
            "name": "Template Laravel",
            "email": "template@example.com"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "vimeo/psalm": "^6.13",
        "friendsofphp/php-cs-fixer": "^3.49",
        "squizlabs/php_codesniffer": "^3.8",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "analyse": [
            "@php ./vendor/bin/phpstan analyse --memory-limit=2G",
            "@php ./vendor/bin/psalm --no-progress"
        ],
        "cs-check": [
            "./vendor/bin/php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.php",
            "./vendor/bin/phpcs --standard=PSR12 scripts docs docker .github"
        ],
        "cs-fix": [
            "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
            "./vendor/bin/phpcbf --standard=PSR12 scripts docs docker .github"
        ],
        "quality": [
            "@php ./vendor/bin/phpstan analyse --memory-limit=2G",
            "@php ./vendor/bin/psalm --no-progress",
            "./vendor/bin/php-cs-fixer fix --dry-run --diff --config=.php-cs-fixer.php",
            "./vendor/bin/phpcs --standard=PSR12 scripts docs docker .github"
        ]
    }
}
