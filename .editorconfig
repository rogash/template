root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml,json,md}]
indent_size = 2

[*.{js,jsx,ts,tsx,vue,css,scss}]
indent_size = 2

[*.{php,blade.php}]
indent_size = 4

[Makefile]
indent_style = tab
